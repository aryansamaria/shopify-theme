        {
          "type": "color",
          "id": "primary_color",
          "label": "Primary Color",
          "default": "#222222"
        },
        {
          "type": "color",
          "id": "secondary_color",
          "label": "Secondary Color",
          "default": "#f8f8f8"
        },
        {
          "type": "color",
          "id": "accent_color",
          "label": "Accent Color",
          "default": "#e63946"
        },
        {
          "type": "header",
          "content": "Text Colors"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#333333"
        },
        {
          "type": "color",
          "id": "light_text_color",
          "label": "Light Text Color",
          "default": "#ffffff"
        }
      ]
    },
    {
      "name": "Typography",
      "settings": [
        {
          "type": "header",
          "content": "Headings"
        },
        {
          "type": "font_picker",
          "id": "heading_font",
          "label": "Font",
          "default": "playfair_display_n7"
        },
        {
          "type": "header",
          "content": "Body Text"
        },
        {
          "type": "font_picker",
          "id": "body_font",
          "label": "Font",
          "default": "montserrat_n4"
        },
        {
          "type": "range",
          "id": "base_font_size",
          "label": "Base size",
          "min": 14,
          "max": 18,
          "step": 1,
          "unit": "px",
          "default": 16
        }
      ]
    },
