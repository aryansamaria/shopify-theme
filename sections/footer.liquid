<footer>
  <div class="container">
    <div class="footer-grid">
      <!-- Company Info -->
      <div class="footer-col">
        <h3>{{ shop.name }}</h3>
        <p>{{ section.settings.footer_text }}</p>
        <div class="social-links">
          {% if section.settings.facebook_url != blank %}
            <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener" aria-label="Facebook">
              <i class="fab fa-facebook-f"></i>
            </a>
          {% endif %}
          
          {% if section.settings.instagram_url != blank %}
            <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener" aria-label="Instagram">
              <i class="fab fa-instagram"></i>
            </a>
          {% endif %}
          
          {% if section.settings.twitter_url != blank %}
            <a href="{{ section.settings.twitter_url }}" target="_blank" rel="noopener" aria-label="Twitter">
              <i class="fab fa-twitter"></i>
            </a>
          {% endif %}
          
          {% if section.settings.pinterest_url != blank %}
            <a href="{{ section.settings.pinterest_url }}" target="_blank" rel="noopener" aria-label="Pinterest">
              <i class="fab fa-pinterest-p"></i>
            </a>
          {% endif %}
          
          {% if section.settings.tiktok_url != blank %}
            <a href="{{ section.settings.tiktok_url }}" target="_blank" rel="noopener" aria-label="TikTok">
              <i class="fab fa-tiktok"></i>
            </a>
          {% endif %}
        </div>
      </div>
      
      <!-- Quick Links -->
      <div class="footer-col">
        <h3>Quick Links</h3>
        <ul class="footer-links">
          <li><a href="/">Home</a></li>
          <li><a href="/collections/all">Collections</a></li>
          <li><a href="/pages/about">About</a></li>
          <li><a href="/pages/contact">Contact</a></li>
        </ul>
      </div>
      
      <!-- Help -->
      <div class="footer-col">
        <h3>Help</h3>
        <ul class="footer-links">
          <li><a href="/policies/shipping-policy">Shipping</a></li>
          <li><a href="/policies/refund-policy">Returns & Exchanges</a></li>
          <li><a href="/policies/privacy-policy">Privacy Policy</a></li>
          <li><a href="/policies/terms-of-service">Terms of Service</a></li>
        </ul>
      </div>
      
      <!-- Contact -->
      <div class="footer-col">
        <h3>Contact Us</h3>
        <ul class="footer-links">
          {% if section.settings.address != blank %}
            <li>
              <i class="fas fa-map-marker-alt"></i> {{ section.settings.address }}
            </li>
          {% endif %}
          
          {% if section.settings.phone != blank %}
            <li>
              <i class="fas fa-phone"></i> {{ section.settings.phone }}
            </li>
          {% endif %}
          
          {% if section.settings.email != blank %}
            <li>
              <i class="fas fa-envelope"></i> {{ section.settings.email }}
            </li>
          {% endif %}
        </ul>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.</p>
      {% if section.settings.show_payment_icons %}
        <div class="payment-icons">
          <i class="fab fa-cc-visa"></i>
          <i class="fab fa-cc-mastercard"></i>
          <i class="fab fa-cc-amex"></i>
          <i class="fab fa-cc-paypal"></i>
        </div>
      {% endif %}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "textarea",
      "id": "footer_text",
      "label": "Footer text",
      "default": "We are a premium fashion brand dedicated to creating timeless pieces that elevate your style."
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "url",
      "id": "pinterest_url",
      "label": "Pinterest URL"
    },
    {
      "type": "url",
      "id": "tiktok_url",
      "label": "TikTok URL"
    },
    {
      "type": "header",
      "content": "Contact Information"
    },
    {
      "type": "text",
      "id": "address",
      "label": "Address"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone number"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email address"
    },
    {
      "type": "header",
      "content": "Payment Icons"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    }
  ]
}
{% endschema %}